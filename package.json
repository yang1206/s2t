{
  "name": "s2t-chinese",
  "version": "0.0.4",
  "description": "A tool to convert Simplified Chinese and Traditional Chinese to each other",
  "scripts": {
    "build": "rollup -c",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "release": "bumpp --commit --push --tag && npm publish",
    "start": "esno src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yang1206/s2t-chinese.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "sideEffects": false,
  "keywords": [
    "chinese"
  ],
  "author": "Yang1206",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yang1206/s2t-chinese/issues"
  },
  "homepage": "https://github.com/yang1206/s2t-chinese#readme",
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "^17.0.45",
    "bumpp": "^7.2.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.25.0",
    "esno": "^0.14.1",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "typescript": "^4.8.4",
    "vite": "^2.9.15",
    "vitest": "^0.12.10"
  }
}
